{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ES2022",
        "noImplicitAny": true,
        "removeComments": false,
        "strictNullChecks": true,
        "preserveConstEnums": true,
        "esModuleInterop": true,
        "outDir": "./build/",
        "sourceMap": true,
        "moduleResolution": "nodenext",
        "declaration": true,
        "lib": ["ESNext"],
        "types": []
    },
    "include": [
        "src/**/*",
        "__tests__/"
    ],
    "exclude": [
        "node_modules",
    ]
}